if [ ! -z $timeMachineShare ]; then
  echo "Remove links to a time machine"
  if [ ! -d $readyLinkDir$timeMachineShare ]; then
    mkdir $readyLinkDir$timeMachineShare
    . $chkEx
  fi

  linkDest=$readyLinkDir$timeMachineShare"/ready_"$curDay
  if [ -d $linkDest ]; then
    umount $linkDest
    . $chkEx
    rmdir $linkDest
    . $chkEx
  fi
  
  linkDest=$readyLinkDir$timeMachineShare"/changes_"$curDay
  if [ -d $linkDest ]; then
    umount $linkDest
    . $chkEx
    rmdir $linkDest
    . $chkEx
  fi
fi